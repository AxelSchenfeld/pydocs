---
// src/components/PyTable.astro
interface Props {
  headers: string[];
  rows: any[][];
  caption?: string;
}

const { headers, rows, caption } = Astro.props;
---

<div class="py-table-container">
  <table class="py-table">
    {caption && <caption class="py-table-caption">{caption}</caption>}
    <thead>
      <tr>
        {headers.map((header, idx) => (
          <th class={idx === 0 ? 'text-center' : 'text-left'}>{header}</th>
        ))}
      </tr>
    </thead>
    <tbody>
      {rows.map((row) => (
        <tr>
          {row.map((cell, idx) => (
            <td class={idx === 0 ? 'text-center' : 'text-left'}>{cell}</td>
          ))}
        </tr>
      ))}
    </tbody>
  </table>
</div>

<style>
.py-table-container {
  overflow-x: auto;
  margin-bottom: 2rem;
}

.py-table {
  width: 100%;
  min-width: 800px;
  border-collapse: collapse;
  border: none;
  table-layout: fixed;
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
}

.py-table caption {
  caption-side: top;
  font-weight: bold;
  padding: 0.75rem;
  text-align: left;
  font-size: 1rem;
  color: #333;
}

.py-table th,
.py-table td {
  padding: 0.75rem 1rem;
  word-wrap: break-word;
  white-space: normal;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

/* Encabezado */
.py-table thead {
  background-color: #207bc5;
  color: #fff;
}

/* Alternancia y hover */
.py-table tbody tr:nth-child(even) {
  background-color: rgba(0, 0, 0, 0.03);
}

.py-table tbody tr:hover {
  background-color: rgba(0, 0, 0, 0.05);
}

/* Modo oscuro */
:root[data-theme="dark"] .py-table thead {
  background-color: #a08522;
}

:root[data-theme="dark"] .py-table tbody tr:nth-child(even) {
  background-color: rgba(255, 255, 255, 0.05);
}

:root[data-theme="dark"] .py-table tbody tr:hover {
  background-color: rgba(255, 255, 255, 0.1);
}

:root[data-theme="dark"] .py-table {
  color: #eee;
}

:root[data-theme="dark"] .py-table-container {
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

/* Responsive */
@media (max-width: 640px) {
  .py-table caption {
    font-size: 0.95rem;
    padding: 0.5rem;
  }

  .py-table td,
  .py-table th {
    padding: 0.5rem 0.75rem;
    font-size: 0.9rem;
  }
}
</style>
