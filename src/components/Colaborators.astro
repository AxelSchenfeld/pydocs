---
interface Colaborator {
  login: string;
  html_url: string;
  avatar_url: string;
}

let contributors: Colaborator[] = [];

try {
  const response = await fetch('https://api.github.com/repos/Nelson-5553/pydocs/contributors', {
  headers: {
    'Authorization': `token ${import.meta.env.GITHUB_TOKEN}`, 
    'Accept': 'application/vnd.github+json'
  }
});
  if (!response.ok) throw new Error("Error en la respuesta de GitHub");
  contributors = await response.json();
} catch (error) {
  console.error("Error al cargar colaboradores:", error);
  contributors = [];
}
---

{contributors.length === 0 ? (
   <div class="mt-10 max-w-full mx-0">
    <div class="bg-gray-100/70 dark:bg-white/5 backdrop-blur-lg rounded-3xl shadow-2xl border border-gray-200/50 dark:border-gray-700/50 p-5">
      <div class="flex justify-center items-stretch gap-8 flex-wrap">
        <span class="text-2xl font-bold leading-none bg-gradient-to-r from-[#306998] to-[#4B8BBE] dark:from-[#FFD43B] dark:to-[#FFC107] bg-clip-text text-transparent">
          No contributors found at this time.
        </span>
      </div>
    </div>
  </div>
) : (
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mx-0">
    {contributors
      .filter((contributor: Colaborator) => contributor.login !== "astrobot-houston")
      .map((contributors: Colaborator) => (
        <div class="group relative dark:border-gray-700/50 p-6 hover:shadow-3xl hover:shadow-[#306998]/10 dark:hover:shadow-[#FFD43B]/10 hover:scale-[1.02] transition-all duration-500 overflow-hidden my-0">
            <div class="inset-0 bg-gray-100/70 dark:bg-white/5 backdrop-blur-md border border-white/50 rounded-lg p-6">
            {/* Empty for background effect */}
        
          <div class="flex flex-col items-center md:flex-row flex-wrap gap-8 my-0">
            {/* Avatar Container */}
            <div class="flex w-auto justify-center md:justify-start relative m-0">
              <img
                src={contributors.avatar_url}
                alt={contributors.login}
                class="relative w-24 h-24 md:w-36 md:h-36 rounded-full border-4 border-white hover:border-[#4B8BBE]  dark:border-gray-800 dark:hover:border-yellow-500 shadow-xl transition-all duration-300 group-hover:scale-110"
              />
              {/* Badge GitHub */}
              <div class="absolute m-0 bottom-1 right-1 w-8 h-8 bg-gradient-to-r from-[#306998] to-[#4B8BBE] dark:from-[#FFD43B] dark:to-[#FFC107] rounded-full flex items-center justify-center shadow-lg transition-transform duration-300 group-hover:scale-125">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="white" class="dark:fill-black">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
            </div>
            {/* Info Container */}
            <div class="flex-1 text-center md:text-left">
              {/* Nombre */}
              <h3 class="text-2xl md:text-3xl font-black bg-gradient-to-r from-[#306998] to-[#4B8BBE] dark:from-[#FFD43B] dark:to-[#FFC107] bg-clip-text text-transparent mb-3">
                {contributors.login}
              </h3>
              {/* Título Contributions */}
              <p class="text-sm font-semibold text-gray-600 dark:text-gray-300">
                Contributions:
              </p>
              {/* Badges de contribuciones */}
              <div class="flex flex-wrap gap-2 justify-center md:justify-start mb-6">
                {contributors.login === "Nelson-5553" && (
                  <>
                    <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-bold bg-gradient-to-r from-[#306998] to-[#4B8BBE] text-white dark:from-[#FFD43B] dark:to-[#FFC107] dark:text-black shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300">
                      <span class="w-2 h-2 bg-white dark:bg-black rounded-full mr-2"></span>
                      Developer
                    </span>
                    <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-bold bg-gradient-to-r from-[#4B8BBE] to-[#306998] text-white dark:from-[#FFC107] dark:to-[#FFD43B] dark:text-black shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300">
                      <span class="w-2 h-2 bg-white dark:bg-black rounded-full mr-2"></span>
                      Documentation
                    </span>
                  </>
                )}
                {contributors.login === "serg1l" && (
                  <>
                    <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-bold bg-gradient-to-r from-[#306998] to-[#4B8BBE] text-white dark:from-[#FFD43B] dark:to-[#FFC107] dark:text-black shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300">
                      <span class="w-2 h-2 bg-white dark:bg-black rounded-full mr-2"></span>
                      Developer
                    </span>
                    <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-bold bg-gradient-to-r from-[#4B8BBE] to-[#306998] text-white dark:from-[#FFC107] dark:to-[#FFD43B] dark:text-black shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300">
                      <span class="w-2 h-2 bg-white dark:bg-black rounded-full mr-2"></span>
                      Translator
                    </span>
                  </>
                )}
                {contributors.login !== "Nelson-5553" && contributors.login !== "serg1l" && (
                  <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-bold bg-gradient-to-r from-[#306998] to-[#4B8BBE] text-white dark:from-[#FFD43B] dark:to-[#FFC107] dark:text-black shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300">
                    <span class="w-2 h-2 bg-white dark:bg-black rounded-full mr-2"></span>
                    Developer
                  </span>
                )}
              </div>
              {/* Botón GitHub */}
              <a
                href={contributors.html_url}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Go to GitHub repository"
                class="group/btn relative inline-flex items-center justify-center gap-3 px-12 py-3 w-full md:w-auto bg-gradient-to-r from-[#306998]/10 to-[#4B8BBE]/10 dark:from-[#FFD43B]/10 dark:to-[#FFC107]/10 border-2 border-[#306998]/30 dark:border-[#FFD43B]/30 text-[#306998] dark:text-[#FFD43B] rounded-lg font-bold text-sm hover:border-[#306998] dark:hover:border-[#FFD43B] hover:bg-gradient-to-r hover:from-[#306998] hover:to-[#4B8BBE] dark:hover:from-[#FFD43B] dark:hover:to-[#FFC107] hover:text-white dark:hover:text-black hover:shadow-lg hover:shadow-[#306998]/25 dark:hover:shadow-[#FFD43B]/25 hover:scale-105 transition-all duration-300 overflow-hidden no-underline"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-5 h-5 my-0 transition-transform duration-300 group-hover/btn:scale-110"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                  <path d="M9 18c-4.51 2-5-2-7-2" />
                </svg>
                <span class="relative z-10">GitHub</span>
              </a>
            </div>
          </div>
        </div>
        </div>
      ))}
  </div>
)
