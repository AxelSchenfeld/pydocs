---
import { Card, CardGrid } from '@astrojs/starlight/components';

const response = await fetch('https://api.github.com/repos/Nelson-5553/pydocs/contributors');
const contributors = await response.json();
---

<style>
  .colab-flex {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }
  .colab-img {
    border-radius: 50%;
    border: 2px solid #306998;
    width: 130px;
    height: 130px;
  }
  .colab-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .colab-link {
    color: #306998;
    transition: color 0.3s;
  }
  .colab-role {
    font-size: 0.98em;
    margin-bottom: 0.3em;
  }
  .colab-link {
    text-decoration: underline;
    font-size: 0.95em;
  }
  :root[data-theme="dark"] .colab-img {
    border-color: #FFD43B;
  }
  :root[data-theme="dark"] .colab-role,
  :root[data-theme="dark"] .colab-link {
    color: #FFD43B;
  }
</style>

<CardGrid>
  {contributors.filter((contributor: { login: string, html_url: string, avatar_url: string }) => contributor.login !== 'astrobot-houston').map((contributors: { login: string, html_url: string, avatar_url: string }) => (
  
  <Card title={contributors.login}>
    <div class="colab-flex">
      <img src={contributors.avatar_url} alt="Nelson-5553" class="colab-img" />
      <div class="colab-info">
        <div>Core Developer, Documentation</div>
        <a href={contributors.html_url} target="_blank" class="colab-link">Ver perfil en GitHub</a>
      </div>
    </div>
  </Card>
))}
</CardGrid>
